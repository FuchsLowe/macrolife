        android:supportsRtl="true"
        android:theme="@style/Base.Theme.AppCompat.Light">
        <activity
            android:name=".MasterScreen"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DayView" />
        <activity
            android:name=".ListView"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".TestCases.TestActivity" />
        <activity android:name=".ListTask" />
        <activity android:name=".TestCases.TestActivity2" />
        <activity android:name=".TestCases.TestActivity3" />
        <activity android:name=".ComplexTaskActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name=".TestCases.Test4" />
        <activity android:name=".TestCases.TestActivity4"></activity>
    </application>

</manifest>